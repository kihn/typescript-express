{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    // TODO
    "noImplicitAny": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "exclude": ["./node_modules", "./dist"],
  "include": ["./src/**/*.ts"]
}
